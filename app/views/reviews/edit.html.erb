<h1>レビュー編集画面</h1>

<!-- エラーメッセージ表示 -->
<%= render "layouts/errors", errors_message: @review %>


<%= form_with model: @review, method: :patch, local: true do |f| %>
  <label>タイトル</label>
  <%= f.text_field :title %>

  <label>ジャンル</label>
  <%= f.select :genre_id, Genre.all.map { |g| [g.name, g.id] }, prompt:"ジャンルを選択してください" %>

  <label>製品名</label>
  <%= f.text_field :product_name %>

  <label>画像</label>
  <%= f.file_field :reviews_image, accept: "image/jpeg,image/png" %>

  <label>本文</label>
  <%= f.text_area :post %>

  <%= f.submit "レビューを更新する" %>

<% end %>

<%= link_to "レビュー詳細へ戻る", review_path(@review.id) %>

<%= link_to "レビューを削除する", review_path(@review.id), method: :delete, data: { confirm: "本当によろしいですか？"} %>