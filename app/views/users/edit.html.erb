<div class="container mt-5">
  <h1 class="mb-4"><%= @user.display_name %>さんのアカウント編集</h1>

  <!-- エラーメッセージ表示 -->
  <%= render "layouts/errors", errors_message: @user %>

  <!-- ユーザー情報編集フォーム -->
  <%= form_with model: @user, method: :patch, local: true, html: { class: "needs-validation" } do |f| %>
    <div class="form-group">
      <label>アイコン画像（変更したい時のみ選択してください）</label>
      <!-- accept: "image/jpeg,image/png" でユーザーがjpg pngのみアップできるよう設定 -->
      <%= f.file_field :users_image, class: "form-control-file", accept: "image/jpeg,image/png" %>
    </div>

    <div class="form-group">
      <label>表示名</label>
      <%= f.text_field :display_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <label>メールアドレス</label>
      <%= f.email_field :email, class: "form-control" %>
    </div>

    <div class="form-group">
      <label>パスワード（変更したい時のみ入力してください）</label>
      <%= f.password_field :password, class: "form-control" %>
    </div>

    <div class="form-group">
      <label>パスワード確認用（変更時のみ）</label>
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>

    <div class="form-group mt-4">
      <%= f.submit "変更を保存する", class: "btn btn-primary btn-block" %>
    </div>
  <% end %>

  <div class="mt-3">
    <%= link_to "マイページへ戻る", user_path(@user.id), class: "btn btn-outline-secondary mr-2" %>
    <%= link_to "アカウントを削除する", users_confirm_deletion_path, class: "btn btn-outline-danger" %>
  </div>
</div>
