<div class="container mt-5" style="max-width: 500px;">
  <h2 class="text-center mb-4">新規登録</h2>

  <%= form_with scope: :user, url: user_registration_path, local: true, html: { class: "needs-validation" } do |f| %>

    <!-- 新規登録時のエラーをフラッシュメッセージで返す どうしてもバリデーションエラー時にURLが/usersになってしまうため
    フォームに入力した内容はリセットされてしまいます。 -->
    <% if flash[:alert] %>
      <div class="alert alert-danger"><%= flash[:alert].html_safe %></div>
    <% end %>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <% if @minimum_password_length %>
        <small class="form-text text-muted">（<%= @minimum_password_length %>文字以上）</small>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :display_name, "表示名" %>
      <%= f.text_field :display_name, class: "form-control" %>
    </div>

    <div class="text-center">
      <%= f.submit "新規登録", class: "btn btn-success btn-block" %>
    </div>
  <% end %>

  <div class="text-center mt-3">
    <%= render "devise/shared/links" %>
  </div>
</div>
